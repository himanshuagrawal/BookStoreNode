<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="/css/usermodule/UserShippingAddress.css">
    <link rel="stylesheet" href="/css/partialcss/UserHeader.css">
    <link rel="stylesheet" href="/css/partialcss/BooksCategories.css">
    <link rel="stylesheet" href="/css/partialcss/Footer.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
</head>

<body>
    <%- include ../partials/UserHeader.ejs%>
    <div class="container body">
        <div class="row">
            <%- include ../partials/BooksCategories.ejs%>
            <div class="col-xl-9 shipping-address-container">
                <h2 class="shipping-address-heading" id="shippingAddressHeading">Shipping Address</h2>
                <div class="register-form">
                        <form class="needs-validation" novalidate>
                            <div class="form-group row">
                                <label for="fullName" class="col-sm-3 col-form-label">Customer Name<span
                                        class="required-star">*</span></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="fullName" style="width:70%" disabled>
                                    <div class="invalid-feedback">
                                        Please enter a valid name.
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="addressLine1" class="col-sm-3 col-form-label">Address Line 1<span
                                        class="required-star">*</span></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="addressLine1" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="addressLine2" class="col-sm-3 col-form-label">Address Line 2</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="addressLine2">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="phoneNumber" class="col-sm-3 col-form-label">Select State</label>
                                <div class="col-sm-9">
                                    <select class="form-control" id="state">
                                            <%- include ../partials/StateOptions.ejs %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="phoneNumber" class="col-sm-3 col-form-label">Select City</label>
                                <div class="col-sm-9">
                                        <select class="form-control" id="city">
                                            <option value="Port Blair">Port Blair</option>
                                        </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="phoneNumber" class="col-sm-3 col-form-label">Phone Number</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="phoneNumber" maxlength="10">
                                    <div class="invalid-feedback">
                                        Please enter a valid phone number.
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="mobileNumber" class="col-sm-3 col-form-label">Mobile Number<span
                                    class="required-star">*</span></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="mobileNumber" maxlength="10" required>
                                    <div class="invalid-feedback">
                                        Please enter a valid mobile number.
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9">
                                <button type="submit" class="btn btn-primary submitButton">Save and Continue</button>
                            </div>
                            </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>
    <%- include ../partials/UserFooter.ejs%>
    <script src="/js/jquery/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/js/partialjs/UserHeader.js"></script>
    <script src="/js/usermodule/UserShippingAddress.js"></script>
</body>

</html>